{
  "name": "marblejs",
  "description": "Reactive Node APIs made easy",
  "scripts": {
    "postinstall": "npm run build",
    "build": "lerna link && lerna bootstrap --hoist",
    "benchmark": "npm run build && make -C benchmarks",
    "lint": "tslint --config tslint.json --project tsconfig.spec.json",
    "test": "jest --expand",
    "test:coverage": "jest --expand --coverage",
    "test:watch": "jest --expand --onlyChanged --watch",
    "prepublish": "npm run test",
    "publish": "lerna publish",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "git add",
      "jest --bail --findRelatedTests --passWithNoTests"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marblejs/marble.git"
  },
  "engines": {
    "node": ">= 8.0.0",
    "npm": ">= 5.0.0"
  },
  "keywords": [
    "API",
    "JavaScript",
    "RxJs",
    "TypeScript",
    "Reactive"
  ],
  "authors": [
    "JÃ³zef Flakus"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marblejs/marble/issues"
  },
  "homepage": "https://github.com/marblejs/marble#readme",
  "dependencies": {
    "rxjs": "~6.1.0"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/mock-fs": "^3.6.30",
    "@types/supertest": "^2.0.4",
    "husky": "^0.14.0",
    "jest": "^22.4.3",
    "lerna": "^2.11.0",
    "lint-staged": "^7.1.1",
    "mock-fs": "^4.5.0",
    "mock-req": "^0.2.0",
    "rimraf": "^2.6.2",
    "rxjs-compat": "^6.1.0",
    "supertest": "^3.0.0",
    "ts-jest": "~22.4.4",
    "tsc": "~1.20150623.0",
    "tslint": "~5.9.1",
    "typescript": "~2.9.1"
  }
}
