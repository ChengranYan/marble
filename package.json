{
  "name": "marblejs",
  "version": "1.0.0-rc.2",
  "description": "Reactive Node APIs made easy",
  "scripts": {
    "postinstall": "yarn clean && yarn build && sleep 5s && yarn test",
    "build": "lerna run build",
    "benchmark": "make -C benchmarks",
    "watch": "lerna run --parallel --stream watch",
    "lint": "tslint --config tslint.json",
    "test": "if-env IS_TRAVIS_CI=true && yarn test:ci || yarn test:dev",
    "test:ci": "jest --expand --coverage --runInBand",
    "test:dev": "SCOPE=unit jest --expand --coverage",
    "test:watch": "jest --expand --onlyChanged --watch",
    "clean": "lerna run clean",
    "prepublishOnly": "yarn clean && yarn build && yarn test",
    "publish": "lerna publish --no-push",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint",
      "git add",
      "jest --bail --findRelatedTests --passWithNoTests"
    ]
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marblejs/marble.git"
  },
  "engines": {
    "node": ">= 8.0.0",
    "yarn": ">= 1.7.0",
    "npm": ">= 5.0.0"
  },
  "keywords": [
    "API",
    "JavaScript",
    "RxJs",
    "TypeScript",
    "Reactive"
  ],
  "authors": [
    "JÃ³zef Flakus"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marblejs/marble/issues"
  },
  "homepage": "https://github.com/marblejs/marble#readme",
  "dependencies": {
    "rxjs": "~6.2.2"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/mock-fs": "^3.6.30",
    "@types/supertest": "^2.0.4",
    "husky": "^0.14.0",
    "if-env": "^1.0.4",
    "jest": "^23.5.0",
    "lerna": "^3.3.0",
    "lint-staged": "^7.2.2",
    "mock-fs": "^4.5.0",
    "mock-req": "^0.2.0",
    "rimraf": "^2.6.2",
    "rxjs-compat": "^6.1.0",
    "supertest": "^3.0.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^5.0.0",
    "tslint": "~5.9.1",
    "typescript": "^3.1.0-dev.20180922"
  },
  "workspaces": [
    "packages/*"
  ]
}
